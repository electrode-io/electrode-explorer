.component-documentation {
  background: white;
  padding: 1px 40px 20px 40px;
  margin-top: 40px;
  position: relative;
}

.component-documentation>div {
  border-bottom:1px solid #ececec;
  padding: 40px 0 80px 0;

  &:last-of-type {border-bottom:0;}
}

.component-documentation>div>h3 {
  margin-bottom:20px;
}

.component-version {
  font-weight: 300;
  color: #999;
  font-size:0.9em;
}

.component-description {
  color: #888;
  display: block;
  font-size: 0.8em;
  font-weight: 200;
}

.component-usage {
  margin: 0;
}

.switch-version {
  font-size: 16px;
  float: right;
}

.switch-version-text {
  margin-right: 6px;
  color: #444;
}

.previewArea {
  padding-top:40px;
}

.code-well {
  font-family: monospace;
  background: #ccc;
  border-color: #aaa;
  padding: 20px;
  margin: 20px 0;
  border: 2px solid #dfebed;
  border-radius: 10px;
}

.demo {
  margin-top: 20px;
  margin-left: 1%;
}
