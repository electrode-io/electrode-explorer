.explorer-menu {
  background-color: transparent;
  position: absolute;
  width: 15%;
  margin-top: 2px;
  border-right: 1px solid #e5e5e5;
}

.explorer-menu ul {
  list-style-type: none;
  margin: 10px 0;
  padding-left: 20px;
}

.explorer-menu li {
  padding: 0 0 5px 10px;
  text-transform: capitalize;
  font-size: 0.9em;
}

.explorer-menu li a {
  color: #606060;
}

.explorer-menu li a:hover {
  text-decoration: underline;
}

.menu-link {
  color: white;
  margin: 0 10%;
}

.explorer-menu h4 {
  margin-left: 20px;
  text-transform: capitalize;
}

.explorer-menu ul.menu-submodules {
  margin: 5px 0 0 0;
  padding: 0;

  li {
    margin: 0;
    padding: 2px 10px;
    font-size:0.9em;

    a {
      color: #999;
    }
  }
}