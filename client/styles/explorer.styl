body {
  background:#efefef;
  margin-top: -20px;
}

.explorer-header {
  background: white;
  padding-top: 20px;
}

.explorer-title {
  margin-top: 20px;
  margin-left: 1%;
}

.explorer-header>h1 {
  text-align: center;

  img {
    height: 89px;
  }
}

.explorer-body {
  background: #efefef;
  padding: 0 25.5% 100px 15%;
  min-height: 700px;
}

.component-documentation {
  background: white;
  padding: 1px 40px 20px 40px;
  margin-top: 40px;
  position: relative;
}

.component-documentation>div {
  border-bottom:1px solid #ececec;
  padding: 40px 0 80px 0;

  &:last-of-type {border-bottom:0;}
}

.component-documentation>div>h3 {
  margin-bottom:20px;
}

.explorer-body span.component-info {
  color: #808080;
  font-weight: normal;
  font-size: 0.6em;
  display: block;
}

.nav-link {
  display: block;
  position: relative;
  font-size: 14px;
  font-weight: 400;
  text-decoration: none;
  cursor: pointer;
  text-transform: capitalize;
}

.nav-link:hover {
  color: #fff;
  background-color: #0070b2;
}

.explorer-menu {
  background-color: transparent;
  position: absolute;
  width: 15%;
  margin-top: 2px;
  border-right: 1px solid #e5e5e5;
}

.explorer-menu ul {
  list-style-type: none;
  margin: 10px 0;
  padding-left: 20px;
}

.explorer-menu li {
  padding: 0 0 5px 10px;
  text-transform: capitalize;
  font-size: 0.9em;
}

.explorer-menu li a {
  color: #606060;
}

.explorer-menu li a:hover {
  text-decoration: underline;
}

.menu-link {
  color: white;
  margin: 0 10%;
}

.explorer-menu h4 {
  margin-left: 20px;
  text-transform: capitalize;
}

.explorer-footer {
  background-color: #f2f8fd;
}

.footer-container {
  padding-left: 32px;
  padding-right: 32px;
}

.footer-text {
  color: #888;
  font-size: 13px;
  line-height: 40px;
  padding-left: 20px;
}

.component-version {
  font-weight: 300;
  color: #999;
  font-size:0.9em;
}

.component-description {
  color: #888;
  display: block;
  font-size: 0.8em;
  font-weight: 200;
}

.component-usage {
  margin: 0;
}

.switch-version {
  font-size: 16px;
  float: right;
}

.switch-version-text {
  margin-right: 6px;
  color: #444;
}

.usage-detail {
  margin:10px 0;
}

.detail-uri {
  font-size:0.9em;
}

.detail-version {
  font-family:monospace;
  padding:0 20px;
}

.detail-description {
  color:#666;
  font-size:0.9em;
}

.revealer-footer {
  text-align:left;
}

.previewArea {
  padding-top:40px;
}

.code-well {
  font-family: monospace;
  background: #ccc;
  border-color: #aaa;
  padding: 20px;
  margin: 20px 0;
  border: 2px solid #dfebed;
  border-radius: 10px;
}

.version-status-ok {
  color:green;
}

.version-status-bad {
  color:red;
}

.explorer-menu ul.menu-submodules {
  margin: 5px 0 0 0;
  padding: 0;

  li {
    margin: 0;
    padding: 2px 10px;
    font-size:0.9em;

    a {
      color: #999;
    }
  }
}

.component-consumption {
  position: absolute;
  top: 175px;
  right: 0;
  width: 24%;
}

.component-consumption .table {
  border-bottom:0;
}

.component-consumption .table td:first-child {
  padding-left: 0;
}

em {
  font-style: normal;
  font-weight: 700;
}

.gift-cards-wrapper,
.edit-credit-card-wrapper,
.credit-card,
.credit-cards-wrapper,
.credit-card-wrapper {
  position: relative;
}

.explorer-search-bar {
  background: #093252;
  padding: 1px 15px 11px;
}

.tt-dropdown-menu {
  background: #fff;
  box-shadow: 2px 2px 2px #555;
}

.tt-suggestion {
  padding: 20px;
  border-bottom: 1px solid #eee;
}

.tt-suggestion:last-of-type {
  border-bottom: 0;
}

.tt-suggestion.tt-cursor {
  background: #ffc120;
}

.search-results {
  padding: 0 20px;
}

.search-results h2 em {
  font-style: italic;
}

.search-results h3 {
  font-weight: 200;
}

.search-results h3 em {
  font-style: normal;
  font-weight: 700;
}

.results-list {
  margin-top: 20px;
}

.results-list a {
  pointer:hand;
}

.search-result {
  padding: 20px 40px;
  border-bottom: 1px solid #ccc;
  font-size: 1.2em;
}

.search-input {
  margin-top: 8px;
  width: 100%;
  padding: 8px;
  border-radius: 4px;
  background-color: #fff;
  border-color: #c2cfd6;
  border: 1px solid;
}

.module {
  font-weight: 200;
}

.module em {
  font-weight: 700;
}

.matches {
  font-style: italic;
}

.location {
  font-weight: 700;
}

.demo {
  margin-top: 20px;
  margin-left: 1%;
}

.chooser {
  display: inline-block;
  vertical-align: middle;
  height: 30px;
  position: relative;
  border: 1px solid #c2cfd6;
}


